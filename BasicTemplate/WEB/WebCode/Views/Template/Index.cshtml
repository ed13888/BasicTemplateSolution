@model IList<Common.Entity.Business.TemplateEntity>
@{
    ViewBag.Title = "模板首页";
    var list = Model;
}
@section style{
    <style>
        .bg {
            background: #fff;
            border-left: solid 1px #eee;
            border-top: solid 1px #eee;
            border-right: solid 1px #F8F8F8;
            border-radius: 4px;
            box-shadow: 0 3px 8px -6px rgba(0,0,0,.4);
        }
        .temp-body {
            width: 100%;
        }

            .temp-body .temp-body-logo {
                display: block;
            }

            .temp-body .temp-img {
                width: 100%;
                height: 200px;
                border-radius: 7px;
            }


        .temp-tip {
            height: 22px;
            line-height: 22px;
            position: absolute;
            bottom: 107px;
            font-size: 12px;
            right: 14.9px;
            padding: 0 7px;
            background: rgba(239,155,89,0.9);
            color: #fff;
        }

        .temp-body .temp-body-bottom {
            height: 92px;
        }

            .temp-body .temp-body-bottom .temp-shows {
                color: #E00330;
                /*font-size: 12px;*/
            }

            .temp-body .temp-body-bottom .temp-body-bottom-justify {
                justify-content: center;
                align-items: center;
                display: flex;
            }

                .temp-body .temp-body-bottom .temp-body-bottom-justify button {
                    width: 100%;
                }
    </style>
}

<div class="row my-6 bg">
    @for (int i = 0; i < list.Count; i++)
    {
        <div class="col-md-4 my-2">
            <div class="temp-body">
                <a href="/template/design/@(list[i].FId).html" title="标题Title" rel="bookmark" class="temp-body-logo">
                    <img class="temp-img" src="@(list[i].FImgUrl)" alt="1111">
                    <span class="temp-tip">免费</span>
                </a>
                <div class="temp-body-bottom">
                    <p class="temp-showtp my-2">
                        <span class="temp-showtiele">@(list[i].FName)</span> |
                        <span class="temp-shows">
                            围观: @(list[i].FCheckCount)次
                            <i class="am-icon-get-pocket"></i>
                        </span>
                    </p>
                    <div class="temp-body-bottom-justify">
                        @*<a type="reset" class="btn"  href="/template/design/@(list[i].FId).html">立即制作</a>*@
                        <button class="btn btn-default" onclick="javascrtpt:window.location.href='/template/design/@(list[i].FId).html'">立即制作</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

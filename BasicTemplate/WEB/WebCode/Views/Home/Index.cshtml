@section script {
    <script src="~/Scripts/jquery.animate.js"></script>
    <script>
        $(function () {
            //打赏
            $("#btn-pay").bind("click", function () {
                //询问框
                layer.open({
                    content: '请选择支付方式？'
                    , btn: ['微信', '支付宝']
                    , yes: function (index) {
                        layer.close(index);
                        layer.open({
                            type: 1,
                            title: false,
                            closeBtn: 0,
                            shadeClose: true,
                            skin: 'layui-layer-nobg',
                            content: "<img src='/Resource/img/wxpay.png'/>"
                        });
                    }
                    , no: function (index) {
                        layer.close(index);
                        layer.open({
                            type: 1,
                            title: false,
                            closeBtn: 0,
                            shadeClose: true,
                            skin: 'layui-layer-nobg',
                            content: "<img src='/Resource/img/alipay.png'/>"
                        });
                    }
                });


            })
            $(window).resize(function () {
                var clientWidth = document.body.clientWidth;
                var val = clientWidth >= 768 ? clientWidth / 12 : clientWidth / 9;
                $(".img-block").width(val).height(val);
            });

            //显示时间
            //showtime();
            setLoading(50);

            //signalR
            loadSignalR();
            setLoading(70);

            $.getScript('/fonts/zh7.ttf', function () {
                $("body").addClass("body-font");
            });
        });


        //页面资源加载完成
        document.onreadystatechange = function () {
            if (document.readyState == 'complete') {

                $(window).trigger("resize");
                $(".img-grid").css("opacity", "1");
                setLoading(100);
                var maxRead = 6887162;
                starNum("banner_num", maxRead, function (temp) {
                    temp.text(maxRead);
                    //$("body").addClass("body-font");
                });

                animateImgBlock();
            }
        };
    </script>

}
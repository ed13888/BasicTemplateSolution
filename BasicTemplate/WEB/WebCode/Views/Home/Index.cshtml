@{
    ViewBag.Title = "首页";
}
@section style{
    <style>
        #myCarousel {
        }

            #myCarousel img {
                width: 100%;
                max-height: 400px;
            }
    </style>
}

<div class="row">
    <div id="myCarousel" class="carousel slide" data-interval="5000" data-ride="carousel">
        <!-- 轮播（Carousel）指标 -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- 轮播（Carousel）项目 -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Resource/img/bg1.jpg" alt="First slide">
            </div>
            <div class="item">
                <img src="~/Resource/img/bg2.jpg" alt="Second slide">
            </div>
            <div class="item">
                <img src="~/Resource/img/bg3.jpg" alt="Third slide">
            </div>
        </div>
        <!-- 轮播（Carousel）导航 -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h2>Part1</h2>
            <p>
                balabala
            </p>
            <p><a class="btn btn-default" href="#">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Part2</h2>
            <p>
                balabala
            </p>
            <p><a class="btn btn-default" href="#">Learn more &raquo;</a></p>
        </div>
        <div class="col-md-4">
            <h2>Part3</h2>
            <p>
                balabala
            </p>
            <p><a class="btn btn-default" href="#">Learn more &raquo;</a></p>
        </div>
    </div>

    <!--打赏-->
    <div class="row text-center">
        <p>小礼物走一走，你的支持就是我们最大的努力</p>
    </div>
    <div class="row text-center">
        <div id="btn-pay" class="btn btn-pay">赞赏支持</div>
    </div>
    <div class="row">
        <audio src="http://www.zaiyiqiba.com/mp3/kgmp3.php?id=86F6B12AF4D1F8898B6AA755BCFD36B8" id="audio" autoplay="autoplay" controls="controls" loop="true" hidden="true"></audio>
        <input class="form-control" type="button" onclick="autoPlay()" value="播放" />
        <input class="form-control" type="button" onclick="closePlay()" value="关闭" />
    </div>

    <!--聊天室-->
    <div class="row text-center">
        <div class="col-md-12">
            <textarea id="info" class="form-control" cols="60" rows="10"></textarea>
        </div>
    </div>
    <div class="row">
        <label class="col-md-2 control-label">要发送到服务器的消息：</label>
        <div class="col-md-10">
            <input class="form-control" type="text" id="msg" size="20" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input id="btnSendMsg" class="btn btn-default" type="button" value="发送消息" />
        </div>
    </div>

    <hr />
    <footer class="text-center">
        <p>footer</p>
        <p>&copy; <span id="footer_time"></span></p>
    </footer>
</div>
@section scripts {
    <script>
        $(function () {
            //打赏
            $("#btn-pay").bind("click", function () {
                //询问框
                layer.open({
                    content: '请选择支付方式？'
                    , btn: ['微信', '支付宝']
                    , yes: function (index) {
                        layer.close(index);
                        layer.open({
                            type: 1,
                            title: false,
                            closeBtn: 0,
                            shadeClose: true,
                            skin: 'layui-layer-nobg',
                            content: "<img src='/Resource/img/wxpay.png'/>"
                        });
                    }
                    , no: function (index) {
                        layer.close(index);
                        layer.open({
                            type: 1,
                            title: false,
                            closeBtn: 0,
                            shadeClose: true,
                            skin: 'layui-layer-nobg',
                            content: "<img src='/Resource/img/alipay.png'/>"
                        });
                    }
                });


            })

            //播放音乐
            autoPlay();
            setLoading(50);

            //显示时间
            showtime();
            setLoading(70);

            //signalR
            loadSignalR();

        });

    </script>

}
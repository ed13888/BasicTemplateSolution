@section style{
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <style>
        #myCarousel {
        }

            #myCarousel img {
                width: 100%;
                max-height: 400px;
            }

        .img-grid {
            position: relative;
            background-color: #000;
            opacity: 0;
        }

        .img-block {
            display: block;
            float: left;
            background-color: #000;
            padding: 0;
            margin: 0;
            overflow: hidden;
            width: 160px;
            height: 160px;
        }

            .img-block a {
                filter: alpha(opacity=60);
                -moz-opacity: 0.6;
                opacity: 0.6;
                display: block;
                outline: none;
                width: 100%;
                height: 100%;
                background-size: 100% 100%;
                transform-style: preserve-3d;
                background-position: center center;
                background-repeat: no-repeat;
                background-color: #333;
            }

        .grid-container {
            position: absolute;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .get_font_center {
            width: auto;
            height: 115px;
            margin: 0 20px;
            line-height: 115px;
            float: left;
            font-size: 115px;
            color: #FFFFFF;
            font-family: inherit;
        }

        .get-title {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .get_font_left,
        .get_font_rigth {
            font-size: 30px;
            color: #fff;
        }

        .font_line {
            font-size: 30px;
            color: #fff;
        }

        @@media only screen and (max-width: 768px) {
            .get-title, .font_line {
                display: none;
            }
        }
    </style>
}

